{
  "name": "changed-files",
  "version": "1.0.0",
  "description": "A production-ready GitHub Action for detecting changed files in monorepos",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "package": "npm run build",
    "all": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "github-actions",
    "monorepo",
    "changed-files",
    "ci-cd"
  ],
  "author": "Harsh",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "js-yaml": "^4.1.0",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.17.0",
    "eslint-plugin-jest": "^28.10.0",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  },
  "directories": {
    "example": "examples"
  }
}
